#!/usr/bin/env bash

if [[ $1 == "light" ]]; then
  perl -pi.bak -e 's/^set bg=dark$/set bg=light/' ~/.config/nvim/init.vim
  perl -pi.bak -e 's/^colors: \*nord$/colors: *nord_light/' ~/.config/alacritty/alacritty.yml
else
  perl -pi.bak -e 's/^set bg=light$/set bg=dark/' ~/.config/nvim/init.vim
  perl -pi.bak -e 's/^colors: \*nord_light$/colors: *nord/' ~/.config/alacritty/alacritty.yml
fi
