#!/usr/bin/env bash

alacritty_conf=~/.config/alacritty/alacritty.yml
nvim_init=~/.dotfiles/config/nvim/init.vim

perl -pi -e 's/(^colors: .*)/## \1/' $alacritty_conf
perl -pi -e 's/^# (colors: .*)/\1/' $alacritty_conf
perl -pi -e 's/^## (colors: .*)/# \1/' $alacritty_conf
mkrc $alacritty_conf

perl -pi -e 's/(^colorscheme .*)/"" \1/' $nvim_init
perl -pi -e 's/^" (colorscheme .*)/\1/' $nvim_init
perl -pi -e 's/^"" (colorscheme .*)/" \1/' $nvim_init
